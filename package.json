{
  "dependencies": {
    "concat": "^1.0.3",
    "concat-cli": "^4.0.0",
    "concat-glob-cli": "^0.1.0",
    "css-minify": "^2.0.0",
    "del-cli": "^5.1.0",
    "google-closure-compiler": "^20240317.0.0",
    "npm-watch": "^0.13.0"
  },
  "watch": {
    "minify": {
      "patterns": [
        "static/style/"
      ],
      "extensions": "css"
    },
    "compile": {
      "patterns": [
        "static/script/"
      ],
      "extensions": "js"
    }
  },
  "scripts": {
    "concat": "concat-glob-cli -f assets/style/*.css -o assets/style/style.min.css",
    "minify": "css-minify -d ./static/style/ -o ./assets/style/ && css-minify -d ./static/style/page/ -o ./assets/style/ && npm run concat",
    "compile": "google-closure-compiler -O ADVANCED_OPTIMIZATIONS --emit_use_strict true --js ./static/script/form-input.js --js_output_file ./assets/script/form-input.min.js",
    "build": "npm run minify && npm run compile && JEKYLL_ENV=production bundle exec jekyll build",
    "dev": "start npm-watch && start bundle exec jekyll serve --watch JEKYLL_ENV=development"
  }
}
